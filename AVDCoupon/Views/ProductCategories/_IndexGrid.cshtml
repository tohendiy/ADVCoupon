@model IEnumerable<ADVCoupon.ViewModel.ProductCategoryViewModels.ProductCategoryViewModel>


<script>
    $('.mvc-grid tr').on('rowclick', function (e, data, grid, originalEvent) {

        window.location.href = "/ProductCategories/Details/" + data['id'];
    });
</script>

@(Html
                    .Grid(Model)
                    .Build(columns =>
                    {
                        columns.Add(model => model.Id).Titled(Html.DisplayNameFor(model => model.Id)).Css("Hide");
                        columns.Add(model => model.Caption).Titled(Html.DisplayNameFor(model => model.Caption));
                    })
                    .Empty("No data found")
                    .Id("my-ajax-grid")
                    .Pageable(pager =>
                    {
                        pager.RowsPerPage = 10;
                    })
                    .Filterable()
                    .Sortable()
)
