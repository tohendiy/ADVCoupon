@model IEnumerable<ADVCoupon.ViewModel.ProductViewModels.ProductViewModel>


<script>
    $('.mvc-grid tr').on('rowclick', function (e, data, grid, originalEvent) {

        window.location.href = "/Products/Details/" + data['id'];
    });
</script>

@(Html
                    .Grid(Model)
                    .Build(columns =>
                    {
                        columns.Add(model => model.BarCode).Titled("Barcode");
                        columns.Add(model => model.Name).Titled("Name");
                        columns.Add(model => model.SKU).Titled("SKU");
                        columns.Add(model => model.SupplierName).Titled("Supplier");
                        columns.Add(model => $"<img style='width:80px; height:80px;' src='data:image/jpeg;base64,{(Convert.ToBase64String(model.Image))}'").Encoded(false).Titled("Image");
                    })
                    .Empty("No data found")
                    .Id("my-ajax-grid")
                    .Pageable(pager =>
                    {
                        pager.RowsPerPage = 10;
                    })
                    .Filterable()
                    .Sortable()
)
