@model IEnumerable<ADVCoupon.ViewModel.NetworkPointViewModels.NetworkPointViewModel>


<script>
    $('.mvc-grid tr').on('rowclick', function (e, data, grid, originalEvent) {

        window.location.href = "/NetworkPoints/Details/" + data['id'];
    });
</script>

@(Html
                    .Grid(Model)
                    .Build(columns =>
                    {
                        columns.Add(model => model.Id).Titled(Html.DisplayNameFor(model => model.Id)).Css("Hide");
                        columns.Add(model => model.Name).Titled(Html.DisplayNameFor(model => model.Name));
                        columns.Add(model => model.NetworkName).Titled(Html.DisplayNameFor(model => model.NetworkName));
                        columns.Add(model => model.Longitude).Titled(Html.DisplayNameFor(model => model.Longitude));
                        columns.Add(model => model.Latitude).Titled(Html.DisplayNameFor(model => model.Latitude));
                        columns.Add(model => model.Country).Titled(Html.DisplayNameFor(model => model.Country));
                        columns.Add(model => model.City).Titled(Html.DisplayNameFor(model => model.City));
                        columns.Add(model => model.Street).Titled(Html.DisplayNameFor(model => model.Street));
                        columns.Add(model => model.Building).Titled(Html.DisplayNameFor(model => model.Building));
                    })
                    .Empty("No data found")
                    .Id("my-ajax-grid")
                    .Pageable(pager =>
                    {
                        pager.RowsPerPage = 10;
                    })
                    .Filterable()
                    .Sortable()
)
