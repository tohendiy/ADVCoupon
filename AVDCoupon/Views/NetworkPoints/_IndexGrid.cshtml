@model IEnumerable<ADVCoupon.ViewModel.NetworkPointViewModels.NetworkPointViewModel>


<script>
    $('.mvc-grid tr').on('rowclick', function (e, data, grid, originalEvent) {

        window.location.href = "/NetworkPoints/Details/" + data['id'];
    });
</script>

@(Html
                    .Grid(Model)
                    .Build(columns =>
                    {
                        columns.Add(model => model.Id).Titled("Id");
                        columns.Add(model => model.Name).Titled("Name");
                        columns.Add(model => model.NetworkName).Titled("Network");
                        columns.Add(model => model.Longitude).Titled("Longitude");
                        columns.Add(model => model.Latitude).Titled("Latitude");
                        columns.Add(model => model.Country).Titled("Country");
                        columns.Add(model => model.City).Titled("City");
                        columns.Add(model => model.Street).Titled("Street");
                        columns.Add(model => model.Building).Titled("Building");
                    })
                    .Empty("No data found")
                    .Id("my-ajax-grid")
                    .Pageable(pager =>
                    {
                        pager.RowsPerPage = 10;
                    })
                    .Filterable()
                    .Sortable()
)
