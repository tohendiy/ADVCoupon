@using ADVCoupon.ViewModel.UsersViewModels
@model List<UserTableItemViewModel>
@(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.User.Email).Titled("Email");
                columns.Add(model => model.Role).Titled("Role");
                columns.Add(model => model.User.Network.Caption).Titled("Network Name");
                columns.Add(model => model.User.Provider.Name).Titled("Supplier");
            })
            .Empty("No data found")
            .Id("my-ajax-grid")
            .Pageable(pager =>
            {
                pager.PagesToDisplay = 2;
                pager.RowsPerPage = 2;
            })
            .Filterable()
            .MultiFilterable()
            .Sortable()
)
