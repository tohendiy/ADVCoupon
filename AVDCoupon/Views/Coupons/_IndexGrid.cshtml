@model IEnumerable<ADVCoupon.ViewModel.CouponViewModel.CouponCreateItemViewModel>


<script>
    $('.mvc-grid tr').on('rowclick', function (e, data, grid, originalEvent) {

        window.location.href = "/Coupons/Details/" + data['id'];
    });
</script>

@(Html
                    .Grid(Model)
                    .Build(columns =>
                    {
                        columns.Add(model => model.Caption).Titled("Name");
                        columns.Add(model => model.DiscountPercentage).Titled("DiscountPercentage");
                        columns.Add(model => model.DiscountAbsolute).Titled("DiscountAbsolute");
                        columns.Add(model => model.StartDate).Titled("StartDate");
                        columns.Add(model => model.EndDate).Titled("EndDate");
                        columns.Add(model => model.TotalCapacity).Titled("TotalCapacity");
                        columns.Add(model => model.CurrentCapacity).Titled("CurrentCapacity");
                        columns.Add(model => model.IsApproved).Titled("IsApproved");
                        columns.Add(model => model.IsAbsoluteDiscount).Titled("IsAbsoluteDiscount");

                        columns.Add(model => $"<img style='width:80px; height:80px;' src='data:image/jpeg;base64,{(Convert.ToBase64String(model.ImageView))}'").Encoded(false).Titled("Image");


                    })
                    .Empty("No data found")
                    .Id("my-ajax-grid")
                    .Pageable(pager =>
                    {
                        pager.RowsPerPage = 10;
                    })
                    .Filterable()
                    .Sortable()
)
